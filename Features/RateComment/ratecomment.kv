MDScreen:
    name: "ratecomment"
    MDFloatLayout: 
        md_bg_color: 1, 1, 1, 1
        MDIconButton:
            icon: "arrow-left"
            pos_hint: {"center_y": .95} 
            user_font_size: "30sp"
            theme_text_color: "Custom"
            text_color: rgba(26, 24, 58, 255)
            on_release: 
                root.manager.transition.direction = "right"
                root.manager.current = "main" 
